{
  "name": "fsd-backend",
  "description": "Hospital Manangemente System",
  "version": "1.0.0",
  "license": "pro-lab-software",
  "private": true,
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && yarn migrate && tsc",
    "dev": "nodemon --watch src --ext *.* --exec \"npx tsc && set NODE_ENV=development && node ./dist/bin/www.js\"",
    "start": "set NODE_ENV=production && node ./dist/bin/www.js",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write src/",
    "format-check": "prettier --check src/"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "chai": "^5.1.0",
    "chai-http": "^4.4.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.2.2",
    "morgan": "^1.10.0",
    "redis": "^4.6.13",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=20",
    "npm": "8"
  }
}
